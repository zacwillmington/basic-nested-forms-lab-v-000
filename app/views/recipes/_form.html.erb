<%= form_for @recipe do |f| %>
  Title: <%= f.text_field :title %>

  <%= f.fields_for :ingredients_attributes do |ingredient_attributes| %>
      <%= ingredient_attributes.label :name %>
      <%= ingredient_attributes.text_field :name %>

      <%= ingredient_attributes.label ':#{0}_quantity' %>
      <%= ingredient_attributes.text_field ':#{0}_quantity' %>
      <br>

  <% end %>
  <%= f.submit %>
<% end %>
