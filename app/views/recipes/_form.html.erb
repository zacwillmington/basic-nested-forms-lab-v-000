<%= form_for @recipe do |f| %>
  Title: <%= f.text_field :title %>

  <%= f.fields_for :ingredients_attributes do |ingredient_attributes| %>
      <%= ingredient_attributes.label :'0_name' %>
      <%= ingredient_attributes.text_field :'0_name' %>

      <%= ingredient_attributes.label :'0_quantity' %>
      <%= ingredient_attributes.text_field :'0_quantity' %>
      <br>

      <%= ingredient_attributes.label :'1_name' %>
      <%= ingredient_attributes.text_field :'1_name' %>

      <%= ingredient_attributes.label :'1_quantity' %>
      <%= ingredient_attributes.text_field :'1_quantity' %>
      <br>

      <%= ingredient_attributes.label :'2_name' %>
      <%= ingredient_attributes.text_field :'2_name' %>

      <%= ingredient_attributes.label :'2_quantity' %>
      <%= ingredient_attributes.text_field :'2_quantity' %>

  <% end %>
  <%= f.submit %>
<% end %>
