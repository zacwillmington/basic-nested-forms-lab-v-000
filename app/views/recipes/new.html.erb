<!-- <%= render 'form', recipe: @recipe %> -->

<%= form_for @recipe do |f| %>
  Title: <%= f.text_field :title %>

  <%= f.fields_for :ingredients do |ingredient_attributes| %>
      <%= ingredient_attributes.label :"[attributes][0][name]" %>
      <%= ingredient_attributes.text_field :"[attributes][0][name]" %>

      <%= ingredient_attributes.label :"[attributes][0][quantity]" %>
      <%= ingredient_attributes.text_field :"[attributes][0][quantity]"%>
      <br>
      <%= ingredient_attributes.label :attributes_1_name %>
      <%= ingredient_attributes.text_field :attributes_1_name %>

      <%= ingredient_attributes.label :attributes_1_quantity %>
      <%= ingredient_attributes.text_field :attributes_1_quantity  %>
      <br>
       <%= ingredient_attributes.label :attributes_2_name %>
      <%= ingredient_attributes.text_field :attributes_2_name %>

       <%= ingredient_attributes.label :attributes_2_quantity %>
      <%= ingredient_attributes.text_field :attributes_2_quantity  %>

  <% end %>
  <%= f.submit %>
<% end %>
