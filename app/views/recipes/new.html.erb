  Title: <%= f.text_field :title %>

  <%= fields_for :ingredients do |ingredient_attributes| %>

      <!-- <%= ingredient_attributes.label :name  %> -->
      <%= ingredient_attributes.text_field :"[attributes][0][name]" %>

      <!-- <%= ingredient_attributes.label :"attributes[]['quantity']" %> -->
      <%= ingredient_attributes.text_field :attributes_0_quantity  %>
      <br>
      <%= ingredient_attributes.text_field :"[attributes][1][name]" %>


      <%= ingredient_attributes.text_field :"[attributes][1][quantity]"  %>
      <br>

  <% end %>
  <%= f.submit %>
<% end %>
